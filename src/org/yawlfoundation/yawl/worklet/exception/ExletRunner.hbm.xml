<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.yawlfoundation.yawl.worklet.exception.ExletRunner" table="ws_ExletRunner">

        <id name="ID" column="hr_id" type="long">
            <generator class="native"/>
        </id>

        <property name="caseID"          column="caseID"            type="string"/>
        <property name="_wirID"          column="wirID"             access="field"/>
        <property name="actionIndex"     column="actionIndex"       type="integer"/>
        <property name="itemSuspended"   column="isItemSuspended"   type="boolean"/>
        <property name="caseSuspended"   column="isCaseSuspended"   type="boolean"/>

        <property name="_ruleType" access="field">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.yawlfoundation.yawl.worklet.rdr.RuleType</param>
            </type>
        </property>

        <set name="workletRunners">
      		<key column="exletRunnerID"/>
  	    	<one-to-many class="org.yawlfoundation.yawl.worklet.selection.WorkletRunner"/>
  	    </set>

        <set name="suspendedItems">
      		<key column="itemID"/>
  	    	<one-to-many class="org.yawlfoundation.yawl.engine.interfce.WorkItemRecord"/>
  	    </set>

        <component name="_conclusion" access="field"
                   class="org.yawlfoundation.yawl.worklet.rdr.RdrConclusion"
                   lazy="false">
            <list name="_primitives" access="field" cascade="all" lazy="false">
                <key column="rdrprimitiveid" not-null="true"/>
                <list-index column="listindex"/>
                <composite-element class="org.yawlfoundation.yawl.worklet.rdr.RdrPrimitive">
                    <property name="index"/>
                    <property name="action"/>
                    <property name="target"/>
                </composite-element>
            </list>
        </component>

    </class>
	
</hibernate-mapping>